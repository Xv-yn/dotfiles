#
# run program hotkeys
#

# program launcher
super + @space
	rofi -show drun

# terminal emulator
super + Return
	kitty

# file manager
super + e
	nemo

# firefox
super + f
	firefox

# flameshot screenshot tool
super + shift + s
	flameshot gui

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# Increase volume
super + p
    pactl set-sink-volume @DEFAULT_SINK@ +5%

# Decrease volume
super + o
    pactl set-sink-volume @DEFAULT_SINK@ -5%

#
# Restart Stuff
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# Movement
#

# focus the node in the given direction (Shift to swap)
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# set the window state
super + {t,shift + t,s,v}
        bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# move to the left desktop
super + z
	bspc desktop -f prev

# move to the right desktop
super + x
	bspc desktop -f next

# preselect the direction of new window
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# move a window to the left desktop
super + n
	bspc node -d prev.local

# move a window to the right desktop
super + m
	bspc node -d next.local

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
